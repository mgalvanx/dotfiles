#xmodmap -e "keycode 45 = k K Up Up"
#xmodmap -e "keycode 46 = l L Right Right"

# Changes menu key to super_L
#xmodmap -e "keycode 58 = m M Menu Menu"
xmodmap -e "keycode 135 = Super_L"

