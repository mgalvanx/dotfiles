#!/bin/bash

notename="${*^}"
filename=$(echo "${notename,,}" | tr ' ' '_')
notepath="${NOTES}/0_Inbox/${filename}.md"

if test ! -f $notepath ; then
 printf "# ${notename}\n\n" > $notepath
fi

exec "${EDITOR}" -c "norm Go" "${notepath}"

