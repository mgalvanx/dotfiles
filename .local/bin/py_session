#!/bin/sh 
# .tmux.conf is .config. Because of this the below is need so that my tmux configs will be sourced from .bash_aliases
shopt -s expand_aliases
source ~/.bash_aliases
# This creates new session called PythonIDE then creates window called code. It will then detaches.
tmux new-session -s PythonIDE -n Code -d

# This create a new window in the PythonIDE session called Asciiquarium. 
#(-d means detach from it since you are automatically in a newly created window)
tmux new-window -t PythonIDE -d -n Asciiquarium 
tmux new-window -t PythonIDE -d -n Matrix
tmux new-window -t PythonIDE -d -n Weather

# This sends the command aq to the Asciiquarium window in the PythonIDE session
tmux send-keys -t PythonIDE:Asciiquarium "aq" Enter
tmux send-keys -t PythonIDE:Matrix "cmatrix" Enter
tmux send-keys -t PythonIDE:Weather "curl wttr.in" Enter

#This just reselects the window in the PythonIDE session
tmux select-window -t PythonIDE:Weather

# This reattaches to the window again
tmux -u attach -t PythonIDE


